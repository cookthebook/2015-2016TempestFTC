<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tournament_mode_title"
        android:id="@+id/tournament_mode_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="enterTournamentMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_autonomous_title"
        android:id="@+id/test_autonomous_btn"
        android:layout_below="@+id/tournament_mode_btn"
        android:layout_centerHorizontal="true"
        android:onClick="enterAutonomousMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drive_robot_title"
        android:id="@+id/drive_robot_btn"
        android:layout_below="@+id/test_autonomous_btn"
        android:layout_centerHorizontal="true"
        android:onClick="enterDriveMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_motors_title"
        android:id="@+id/move_motors_btn"
        android:layout_below="@+id/drive_robot_btn"
        android:layout_centerHorizontal="true"
        android:onClick="enterMotorMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_view_title"
        android:id="@+id/sensor_view_btn"
        android:layout_below="@+id/move_motors_btn"
        android:layout_centerHorizontal="true"
        android:onClick="enterSensorMode"/>
</RelativeLayout>
